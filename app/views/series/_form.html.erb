<%= form_for(series) do |f| %>
    <% if series.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(series.errors.count, "error") %> no dejaron que la serie se guarde </h2>

          <ul>
            <% series.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :imagen %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control" %>
    </div>

    <% unless edit %>
      <div class="form-group">
        <%= f.label :release_date %>
        <%= f.date_select :release_date, class: "form-control", include_blank: true, required: true %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Crear serie", class: "btn btn-primary" %>
    </div>
<% end %>
